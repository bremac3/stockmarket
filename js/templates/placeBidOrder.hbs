<div style = "max-width:50%;float:left;">
<h3>Place Bid</h3>


<div>
    <form>
        <div class="row">
            <div class="large-12 columns">
                <label>Number of Shares
                    {{input value=numOfShares  id="numOfShares" type="text" }}
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Purchase Price
                    {{input value=purchasePrice  id="purchasePrice" }}
                </label>
            </div>
        </div>
    </form>


    <a href="#" class="button radius" {{action 'submit' model}}>Submit</a>
    <a href="#" class="button radius" {{action 'cancel'}}>Cancel</a>

    <!--div with outlet for symbol-->


</div>
</div>